{
  "name": "Productivity tracker",
  "description": "Analysis of your time usage",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["declarativeContent", "storage", "activeTab", "tabs"],

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "Hourglass.png"
    }
  },
  "icons": {
    "16": "Hourglass.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
